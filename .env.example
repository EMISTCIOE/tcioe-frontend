# Example environment configuration
# Copy this file to .env.local and update the values

# Base URL for the application
NEXT_PUBLIC_BASE_URL=https://tcioe.edu.np

# TCIOE API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api-staging.tcioe.edu.np

# Optional: API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Optional: Enable API debug logging (development only)
NEXT_PUBLIC_API_DEBUG=false

# Development-only: use mock data for department pages
# If true, all department hooks (list, detail, programs, staffs, events,
# downloads, plans, gallery) return mocked data matching the public API
# response shape, so you can style UI without live backend.
NEXT_PUBLIC_USE_MOCK_DEPARTMENT=false

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_ID=xxxxxxxxxx
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-project-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Search Console Verification
GOOGLE_VERIFICATION_ID=your-google-verification-code
YANDEX_VERIFICATION_ID=your-yandex-verification-code
BING_VERIFICATION_ID=your-bing-verification-code

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://www.facebook.com/profile.php?id=100090608649691
NEXT_PUBLIC_TWITTER_HANDLE=@tcioe_official
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/school/thapathali-campus


# Contact Information
NEXT_PUBLIC_PHONE=+977-1-4259555
NEXT_PUBLIC_EMAIL=info@tcioe.edu.np
NEXT_PUBLIC_ADDRESS=Thapathali, Kathmandu, Nepal



# Security
NEXTAUTH_SECRET=your-scacac
NEXTAUTH_URL=https://tcioe.edu.np




